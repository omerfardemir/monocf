{
  "name": "monocf",
  "description": "MonoCF for manage Cloudflare Workers in monorepo",
  "version": "0.0.5",
  "author": "Omer Demir",
  "bin": {
    "monocf": "./bin/run.js"
  },
  "bugs": "https://github.com/omerfardemir/monocf/issues",
  "dependencies": {
    "@bluwy/giget-core": "^0.1.2",
    "@cloudflare/workers-types": "^4.20250507.0",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "dotenv": "^16.5.0",
    "jsonc-parser": "^3.3.1",
    "nanospinner": "^1.2.2",
    "wrangler": "^4.14.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/omerfardemir/monocf",
  "keywords": [
    "cloudflare-workers",
    "monorepo",
    "wrangler"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "monocf",
    "commands": "./dist/commands",
    "dirname": "monocf",
    "topicSeparator": " ",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omerfardemir/monocf.git"
  },
  "scripts": {
    "build": "shx rm -f tsconfig.tsbuildinfo && shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme",
    "format": "prettier --write \"(src|test)/**/*.{ts,tsx,js,jsx}\""
  },
  "types": "dist/index.d.ts"
}
